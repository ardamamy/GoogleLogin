<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.edu.niu.googlelogin.MyselfActivity"
    android:background="@drawable/gradient_4">


    <Button
        android:id="@+id/btnteam"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btncoperation"
        android:background="@drawable/ovalbutton"
        android:text="隊伍"
        android:textColor="#121361"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btncoperation"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvdepartment"
        android:background="@drawable/ovalbutton"
        android:text="職稱"
        android:textColor="#121361"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvname"
        android:layout_width="304dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnname"
        android:textSize="24sp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tvnumber"
        android:layout_width="304dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="142dp"
        android:textSize="24sp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tvgender"
        android:layout_width="304dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="185dp"
        android:textSize="24sp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tvdepartment"
        android:layout_width="304dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btndepartment"
        android:textSize="24sp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tvcoperation"
        android:layout_width="304dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btncoperation"
        android:textSize="24sp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tvteam"
        android:layout_width="304dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnteam"
        android:textSize="24sp"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/btnname"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="101dp"
        android:background="@drawable/ovalbutton"
        android:text="姓名"
        android:textColor="#121361"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnnumber"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tvnumber"
        android:background="@drawable/ovalbutton"
        android:text="學號"
        android:textColor="#121361"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btngender"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/tvgender"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ovalbutton"
        android:text="性別"
        android:textColor="#121361"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btndepartment"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="223dp"
        android:background="@drawable/ovalbutton"
        android:text="系別"
        android:textColor="#121361"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_5"
        android:text="@string/str1"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="36sp"
        android:textStyle="bold" />

</RelativeLayout>
