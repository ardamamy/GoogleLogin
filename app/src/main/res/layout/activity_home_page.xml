<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.edu.niu.googlelogin.HomePageActivity"
    android:background="@drawable/gradient_5">


    <Button
        android:id="@+id/signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_signout"
        android:text="登出"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/mate_button"
        android:layout_width="168dp"
        android:layout_height="214dp"
        android:layout_alignStart="@+id/calender_button"
        android:layout_alignTop="@+id/money_button"
        android:background="@drawable/ovalbutton"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/andriod" />

    <ImageButton
        android:id="@+id/money_button"
        android:layout_width="168dp"
        android:layout_height="214dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/data_button"
        android:layout_marginBottom="71dp"
        android:background="@drawable/ovalbutton"
        app:srcCompat="@drawable/money" />

    <ImageButton
        android:id="@+id/data_button"
        android:layout_width="168dp"
        android:layout_height="214dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/signout"
        android:layout_marginEnd="14dp"
        android:background="@drawable/ovalbutton"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/data" />

    <ImageButton
        android:id="@+id/calender_button"
        android:layout_width="168dp"
        android:layout_height="214dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/signout"
        android:layout_marginStart="17dp"
        android:background="@drawable/ovalbutton"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/calendar" />

</RelativeLayout>
